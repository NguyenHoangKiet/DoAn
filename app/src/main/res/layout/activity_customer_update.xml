<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customer_UpdateActivity"
    android:padding="30dp">

    <EditText
        android:id="@+id/customer_update_activity_cusname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Tên khách hàng"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/customer_update_activity_cusadd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Địa chỉ"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customer_update_activity_cusname" />

    <EditText
        android:id="@+id/customer_update_activity_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Số điện thoại"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customer_update_activity_cusadd" />

    <Button
        android:textAllCaps="false"
        android:layout_width="240dp"
        android:layout_height="41dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/text_button"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/style_button"
        android:id="@+id/customer_update_activity_update_button"

        android:text="Cập nhật"

        app:layout_constraintBottom_toTopOf="@+id/customer_update_activity_delete_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:textAllCaps="false"
        android:layout_width="240dp"
        android:layout_height="41dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/text_button_delete"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/style_button_delete"
        android:id="@+id/customer_update_activity_delete_button"
        android:text="Xóa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>